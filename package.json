{
  "name": "todomvc-react-tdd",
  "version": "0.0.1",
  "description": "TodoMVC built with React and TDD",
  "repository": {
    "type": "git",
    "url": "https://github.com/NiGhTTraX/todomvc-react-tdd.git"
  },
  "scripts": {
    "test": "npm run test:unit --silent && npm run test:acceptance --silent",
    "test:unit": "NODE_ENV=tests nyc mocha --compilers js:babel-register --reporter min tests/helpers/index.node.js \"tests/unit/**/*.spec.js\"",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:unit:debug": "npm run build -- ./tests/unit/webpack.config.unit.js -w",
    "test:acceptance": "./tests/acceptance/run.sh",
    "test:acceptance:debug": "./tests/acceptance/debug.sh",
    "_test:acceptance": "wdio tests/acceptance/wdio.conf.js",
    "_test:acceptance:debug": "wdio tests/acceptance/wdio.conf.debug.js",
    "build:bail": "webpack --progress --bail --config",
    "build": "webpack --progress --config",
    "lint": "npm run lint:files -- .",
    "lint:files": "eslint --ext js --ext jsx",
    "postinstall": "./tools/install-git-hooks.sh",
    "start": "node tests/dev-server.js"
  },
  "keywords": [
    "todomvc",
    "react",
    "tdd"
  ],
  "author": "Andrei Picus",
  "license": "MIT",
  "dependencies": {
    "classnames": "~2.2.5",
    "react": "~16.3.2",
    "react-dom": "~16.3.2",
    "todomvc-app-css": "~2.1.2"
  },
  "devDependencies": {
    "babel": "~6.23.0",
    "babel-core": "~6.26.3",
    "babel-eslint": "~8.2.3",
    "babel-loader": "~7.1.4",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-object-rest-spread": "~6.26.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-react-hmre": "~1.1.1",
    "babel-register": "~6.26.0",
    "chai": "~4.1.2",
    "css-loader": "~0.28.11",
    "eslint": "~4.19.1",
    "eslint-config-airbnb": "~16.1.0",
    "eslint-import-resolver-webpack": "~0.10.0",
    "eslint-plugin-import": "~2.12.0",
    "eslint-plugin-jsx-a11y": "~6.0.3",
    "eslint-plugin-react": "~7.8.2",
    "express": "~4.16.3",
    "jquery": "~3.3.1",
    "jsdom": "~11.10.0",
    "lodash.merge": "~4.6.1",
    "mocha": "~5.2.0",
    "nyc": "~11.8.0",
    "react-addons-test-utils": "~15.6.2",
    "sinon": "https://github.com/uberVU/Sinon.JS.git",
    "sinon-chai": "~3.0.0",
    "skip-amd-webpack-plugin": "1.0.0",
    "style-loader": "~0.21.0",
    "wdio": "~2.0.2",
    "wdio-mocha-framework": "~0.5.8",
    "webdriverio": "~4.12.0",
    "webpack": "~4.8.3",
    "webpack-dev-middleware": "~3.1.3",
    "webpack-hot-middleware": "~2.22.2"
  }
}
